/**index.wxss**/

.main-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.userinfo-box{
  width: 80%;
  display: flex;
   margin: 0 auto;
  margin-top: 25rpx;
  border-bottom: 1rpx #ccc solid;
}
.userinfo {
  width: 60%;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin: 0 auto;
  /* margin-top: 25rpx;
  border-bottom: 1rpx #ccc solid;  */
}

.userinfo-avatar {
  align-items: baseline;
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  /* width: 70%; */
  color: #aaa;
  margin-left: 25rpx;
}

.usermotto {
  margin-top: 200px;
}

.amazing-box {
  display: flex;
  flex-direction: column;
  /* background-image: url('../../images/shengyu.jpg'); */
  width: 50%;
  /* height: 40rpx; */
  margin: 0 auto;
  border-radius: 2%;
  background-color: #cfc;
  margin-top: 30rpx;
  /* box-shadow: 0rpx 0rpx 0rpx 4rpx #CCCC99; */
  font-family: "微软雅黑";
}

.surplus-box {
  display: flex;
  flex-direction: row;
  color: white;
  margin: 0 auto;
  margin-top: 20rpx;
}

.number-img image {
  width: 110rpx;
  height: 130rpx;
}

.number {
  display: flex;
  flex-direction: row;
}

.word-a {
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 auto;
  color: #630;
  font-family: "微软雅黑";
}

.row {
  width: 84%;
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-top: 100rpx;
  margin: 0 auto;
}

.item_size {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: auto;
  width: 200rpx;
}

.img {
  height: 60px;
  width: 60%;
  /* border-radius: 80px;
  border:1px solid rgb(203, 212, 226); */
}

.text {
  font-size: 12px;
  align-content: flex-end;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.bottom-box {
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  margin-top: 50rpx;
  text-decoration: underline;
  position: fixed;
  bottom: 15rpx;
}

.word-bottom {
  color: #9370db;
  text-decoration: underline;
}
