/**index.wxss**/

.main-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
}

.userinfo-box {
  width: 100%;
  display: flex;
  margin: 0 auto;
  padding-top: 10rpx;
  border-bottom: 1rpx #ccc solid;
  background-color: #cc9;
}

.back {
  width: 100%;
  background-color: white;
  border-top-right-radius: 1em;
  border-top-left-radius: 1em;
}

.userinfo {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin: 0 auto;
  /* margin-top: 25rpx;
  border-bottom: 1rpx #ccc solid;  */
}

.userinfo-avatar {
  align-items: baseline;
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}

.userinfo-nickname {
  /* width: 70%; */
  color: #aaa;
  margin-left: 25rpx;
  font-size: 28rpx;
}

.amazing-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 0 auto;
  background-color: #cc9;
  font-family: "微软雅黑";
  padding-bottom: 30rpx;
  padding-top: 30rpx;
}

.surplus-box {
  display: flex;
  flex-direction: row;
  color: white;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #cfc;
  border-radius: 1%;
}

.number-img image {
  width: 110rpx;
  height: 130rpx;
}

.number {
  display: flex;
  flex-direction: row;
  padding-top: 10rpx;
}

.word-a {
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 auto;
  color: #630;
  font-family: "微软雅黑";
}

.row {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-top: 30rpx;
  margin: 0 auto;
  background-color: white;
}

.item_size {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: auto;
  width: 200rpx;
}

.img {
  height: 35px;
  width: 35%;
  /* border-radius: 80px;
  border:1px solid rgb(203, 212, 226); */
}

.text {
  font-size: 20rpx;
  align-content: flex-end;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.bottom-box {
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  margin-top: 50rpx;
  text-decoration: underline;
  position: fixed;
  bottom: 15rpx;
}

.word-bottom {
  color: #9370db;
  text-decoration: underline;
}

.title-box {
  width: 96%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 30rpx;
}

.line-css {
  width: 70%;
  height: 1px;
  background: #ccc;
}

.title-word {
  width: 30%;
  font-size: 26rpx;
  text-align: center;
  line-height: 1%;
}

.poster-container {
  display: flex;
  width: 90%;
  margin: 0 auto;
  flex-direction: column;
  margin-top: 20px;
  padding-bottom: 5px;
  background-color: #fff;
}

.poster-content {
  text-indent: 60rpx;
  margin-left: 20rpx;
  margin-bottom: 10px;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.date {
  margin-left: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10px;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  text-align: right;
}
