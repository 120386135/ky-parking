.item-wrapper {
  width: 100%;
  overflow: hidden;
  margin-bottom: 80rpx;
}

.item-list {
  position: relative;
  width: 100%;
  height: 150rpx;
  border-bottom: 1px solid #ccc;
}

.item-info, .item-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.item-info {
  display: flex;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

/* .item-list:first-child {
  border-top: 1px solid #ccc;
}  */

.item-oper {
  display: flex;
  justify-content: flex-end;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}

.oper-xiugai {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: rgb(139, 179, 79);
}

.info-wrapper {
  width: 100%;
  height: 150rpx;
  display: inline-flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
  text-align: center;
  /* margin-top: 10rpx; */
}

.info-wrapper text {
  width: 260rpx;
  font-weight: 550;
}

.label {
  display: inline-flex;
  margin-top: 20rpx;
  background: rgb(150, 163, 202);
  color: #fff;
  border-radius: 10rpx;
}

.label text {
  width: 280rpx;
  text-align: center;
}

.info-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 80%;
}