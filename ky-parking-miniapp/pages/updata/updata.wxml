<!--pages/updata/updata.wxml-->
<view class='main-box'>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class='input-box'>
      <text>姓名:</text>
      <input class='input-content' placeholder-class="placeholderStyle" placeholder="请输入姓名(必填)" type="text" data-value='{{username}}' name="username" confirm-type="done" value='{{post.username}}'>{{post.username}}</input>
    </view>
    <view class='input-box'>
      <text>电话号码:</text>
      <input tel_no type="number" class='input-content' placeholder-class="placeholderStyle" data-value='{{tel}}' name="tel" placeholder="请输入电话号码(必填)" maxlength="11" value='{{post.tel}}'>{{post.tel}}</input>
    </view>
    <view class="input-box">
      <picker mode="date" value="{{date}}" start="1978-01-01" end="2029-1-23" bindchange="bindDateChange">
        <view class="picker">
          <text>进校日期:</text>
          <input tel_no type="number" class='input-content' placeholder-class="placeholderStyle" data-value='{{date}}' name="date" placeholder="请选择进校日期(必填)" maxlength="11" value='{{date}}' disabled='disabled'>{{post.date}}</input>
        </view>
      </picker>
    </view>
    <view class='input-box'>
      <text>车牌号:</text>
      <input type="text" class='input-content' placeholder-class="placeholderStyle" name="nation" placeholder="请输入车牌号(必填)" value='{{post.car_no}}'>{{post.car_no}}</input>
    </view>
    <view class='input-box'>
      <text>备注：</text>
      <textarea type="text" class='input-comments' placeholder-class="text-areaStyle" name="remark" placeholder="" value='{{post.remark}}' maxlength="1200" placeholder=""/>
    </view>
    <view class="btn-area">
      <button formType="submit" class='btn' bindtap=''>点击修改</button>
    </view>
  </form>
</view>
